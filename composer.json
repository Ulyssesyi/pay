{
    "name": "yijin/pay",
    "description": "A project for diff channel to pay in china",
    "type": "library",
    "version": "3.3.8",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "ext-bcmath": "*",
        "guzzlehttp/guzzle": "^7.3",
        "nesbot/carbon": "^2.16",
        "vlucas/phpdotenv": "^5.3",
        "alipaysdk/easysdk": "^2.2",
        "stripe/stripe-php": "^12.7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Yijin\\Pay\\": "src/"
        }
    },
    "authors": [
        {
            "name": "yijin",
            "email": "yijin@91laiqian.com"
        }
    ],
    "minimum-stability":"dev",
    "prefer-stable": true,
    "license":"Apache-2.0",
    "scripts": {
        "test": "phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "phpstan": "phpstan analyse --memory-limit 600M -l 0 -c phpstan.neon ./src ./tests"
    }
}
